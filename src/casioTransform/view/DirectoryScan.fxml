<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ButtonBar?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.AnchorPane?>

<AnchorPane prefHeight="261.0" prefWidth="446.0" xmlns="http://javafx.com/javafx/9" xmlns:fx="http://javafx.com/fxml/1" fx:controller="casioTransform.view.directoryScanController">
   <children>
      <Label text="Scan Directory for Casio Cash Register files" />
      <ButtonBar layoutY="100.0" prefHeight="61.0" prefWidth="446.0">
        <buttons>
          <Button mnemonicParsing="false" onAction="#selectDirectory" text="Select Directory to Scan" />
            <Label fx:id="directoryNameLabel" />
        </buttons>
      </ButtonBar>
      <ButtonBar layoutX="10.0" layoutY="171.0" prefHeight="90.0" prefWidth="436.0">
         <buttons>
            <Button mnemonicParsing="false" onAction="#startScan" text="Start the Scan" />
            <Label fx:id="scanCountLabel" />
         </buttons>
      </ButtonBar>
      <ButtonBar layoutX="20.0" layoutY="269.0" prefHeight="133.0" prefWidth="436.0">
         <buttons>
            <Button mnemonicParsing="false" onAction="#handleSaveToDatabase" text="Save to database" />
            <Label fx:id="saveToDBLabel" text="Entries saved: " />
         </buttons>
      </ButtonBar>
   </children>
</AnchorPane>
